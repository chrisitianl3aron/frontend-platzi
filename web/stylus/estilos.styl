@import "normalize.styl"
gris_oscuro = #333333
gris_claro=#818181

body
  font-size 16px

figure
  margin 0

a
  text-decoration none
.container
  padding 1.4rem
  font-size 0em
  text-align center

.button-menu
  position absolute
  top 50%
  left .5em
  margin-top -10px

.border-bottom
  border-bottom solid 1px gris_claro

.relative
  position relative
.name
  color gris_oscuro

.header
  height 3.5em
  .title
    font-size 1.1em
    text-align center
    margin 0
    line-height 3.5em

.menu
  display none

.author
  color gris_claro

.song
  width 8rem
  display inline-block
  font-size 1rem
  margin-right 1em
  margin-bottom 1em
  text-align left
  &:nth-child(even)
    margin-right 0
  p
    margin .5em 0





